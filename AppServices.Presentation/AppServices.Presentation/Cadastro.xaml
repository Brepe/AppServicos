<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppServices.Presentation.Cadastro">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
            <Label x:Name="label" Text="Cadastro de prestador de serviço" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
            <Entry x:Name="mail" Placeholder="E-mail" />
            <Entry  x:Name="pass" IsPassword="true" Placeholder="Senha" />
                <Entry  x:Name="passRe" IsPassword="true" Placeholder="Repetir Senha" />
                <Entry x:Name="cpf" Placeholder="CPF/CNPJ" />
            <Entry x:Name="nome" Placeholder="Nome" />
            <Picker x:Name="myPicker" Title="Selecione sua região" ItemDisplayBinding="{Binding RetailerName}" />


            <StackLayout 
                VerticalOptions="CenterAndExpand"
                  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                    <Entry x:Name="qgarcom" HorizontalOptions="FillAndExpand" Keyboard="Numeric"  Placeholder="Qtd de garçons" />
                    <Entry x:Name="qfritadeira" HorizontalOptions="FillAndExpand" Keyboard="Numeric"  Placeholder="Qtd de fritadeiras" />
                    <Entry x:Name="qcopeira" HorizontalOptions="FillAndExpand" Keyboard="Numeric"  Placeholder="Qtd de copeiras" />
                </StackLayout >

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                    <Slider Maximum="60" Minimum="10"  Value="20" ValueChanged="OnSliderValueChanged"
                             Grid.Row="0" Grid.Column="0" />
                    <Label x:Name="Resp1" Text="Preço por hora (garçom): 20"  VerticalOptions="CenterAndExpand" 
                           Grid.Row="0" Grid.Column="1" />

                    <Slider  Maximum="60" Minimum="10" Value="20" ValueChanged="OnSliderValueChanged2" 
                             Grid.Row="1" Grid.Column="0" />
                    <Label x:Name="Resp2" Text="Preço por hora (fritadeira): 20"   VerticalOptions="CenterAndExpand" 
                           Grid.Row="1" Grid.Column="1" />

                    <Slider Maximum="60" Minimum="10" Value="20" ValueChanged="OnSliderValueChanged3"  
                             Grid.Row="2" Grid.Column="0" />
                    <Label x:Name="Resp3" Text="Preço por hora (copeira): 20"  VerticalOptions="CenterAndExpand"  
                             Grid.Row="2" Grid.Column="1" />
                </Grid>
            <Button x:Name="btLogin" Text="Cadastrar"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center" Clicked="OnButtonClicked3"
                 />

        </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>